<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="18dp"
        android:text="Plazo"
        android:textColor="@color/text_primary"/>

    <Spinner
        android:id="@+id/spinnerPlazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.CrediGo.Spinner"/>

    <EditText
        android:id="@+id/etMonto"
        android:inputType="numberDecimal"
        android:hint="Monto solicitado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etMotivo"
        android:inputType="text"
        android:hint="Motivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:text="Tasa de interÃ©s (%)"
        android:textSize="18dp"/>


    <Spinner
        android:id="@+id/spinnerTasaInteres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.CrediGo.Spinner"/>

    <EditText
        android:id="@+id/etObservaciones"
        android:hint="Observaciones"
        android:inputType="textMultiLine"
        android:lines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPagoMensual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pago mensual estimado: $0.00"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:textColor="@color/text_primary" />

</LinearLayout>
