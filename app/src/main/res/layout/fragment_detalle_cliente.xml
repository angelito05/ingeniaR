<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.DetalleClienteFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:text="Datos del Cliente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- NOMBRE -->
        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- APELLIDO PATERNO -->
        <EditText
            android:id="@+id/etApellidoPaterno"
            android:hint="Apellido Paterno"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- APELLIDO MATERNO -->
        <EditText
            android:id="@+id/etApellidoMaterno"
            android:hint="Apellido Materno"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- CURP -->
        <EditText
            android:id="@+id/etCurp"
            android:hint="CURP"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />


        <!-- CLAVE ELECTOR -->
        <EditText
            android:id="@+id/etClaveElector"
            android:hint="Clave de Elector"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- SEXO -->
        <EditText
            android:id="@+id/etSexo"
            android:hint="Sexo"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- FECHA DE NACIMIENTO -->
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:hint="Fecha de Nacimiento"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- MUNICIPIO -->
        <EditText
            android:id="@+id/etMunicipio"
            android:hint="Municipio"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- ESTADO -->
        <EditText
            android:id="@+id/etEstado"
            android:hint="Estado"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- DOMICILIO -->
        <EditText
            android:id="@+id/etDomicilio"
            android:hint="Domicilio"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/etCodigoPostal"
            android:hint="Codigo Postal"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="8dp" />

        <!-- BOTÓN GUARDAR CAMBIOS -->
        <Button
            android:id="@+id/btnGuardar"
            android:text="Guardar Cambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="16dp" />

        <!-- BOTÓN ELIMINAR CLIENTE -->
        <Button
            android:id="@+id/btnEliminar"
            android:text="Eliminar Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_marginTop="8dp" />

        <!-- BOTÓN VALIDAR DATOS -->
        <Button
            android:id="@+id/btnValidar"
            android:text="Validar Datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- ===== Imagen INE ===== -->
        <ImageView
            android:id="@+id/imgINE"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen INE"
            android:visibility="visible" />


        <!-- ===== Resultado de validación ===== -->
        <TextView
            android:id="@+id/tvCurpVerificada"
            android:text="CURP:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvFechaVerificacion"
            android:text="Fecha verificación:"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvFechaExpiracion"
            android:text="Fecha expiración:"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ===== Botones de descarga ===== -->
        <Button
            android:id="@+id/btnDescargarINE"
            android:text="Descargar Archivo INE"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDescargarPDF"
            android:text="Descargar Archivo PDF"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
