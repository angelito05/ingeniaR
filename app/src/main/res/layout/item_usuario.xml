<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#E1E4FD"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- ESTE DEBE EXISTIR -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- ESTE TAMBIÉN -->
        <TextView
            android:id="@+id/tvDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo: ejemplo@correo.com\nRol: Empleado\nEstado: Activo"
            android:textSize="14sp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de creación: 01/07/2025"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- BOTONES (pueden ir ocultos por ahora) -->
        <LinearLayout
            android:id="@+id/accionesUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/btnAprobar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activar"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desactivar"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ÍCONO DE ESTADO -->
    <ImageView
        android:id="@+id/iconoEstado"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Estado" />
</LinearLayout>
