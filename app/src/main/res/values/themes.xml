<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base para modo claro -->
    <style name="Theme.CrediGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/purple_accent</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Botones -->
        <item name="colorButtonNormal">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>

        <!-- CardView personalizado -->
        <item name="cardViewStyle">@style/CardViewStyle</item>

        <!-- Botón personalizado global -->
        <item name="materialButtonStyle">@style/Widget.CrediGo.Button</item>
    </style>

    <!-- Estilo para CardViews -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Estilo para botones -->
    <style name="Widget.CrediGo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Estilo para Spinner -->
    <style name="Widget.CrediGo.Spinner" parent="Widget.AppCompat.Spinner">
        <!-- Fondo del Spinner -->
        <item name="android:background">@drawable/spinner_background</item>

        <!-- Color del texto del ítem seleccionado -->
        <item name="android:textColor">@color/text_primary</item>

        <!-- Fondo del popup desplegable -->
        <item name="android:popupBackground">@color/card_background</item>

        <!-- Tamaño del texto para hacerlo más compacto -->
        <item name="android:textSize">14sp</item>

        <!-- Reducir el padding interno del spinner -->
        <item name="android:padding">6dp</item>

        <!-- Altura mínima del spinner -->
        <item name="android:minHeight">10dp</item>
    </style>


</resources>
